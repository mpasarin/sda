{
  "name": "sda-gui",
  "version": "0.0.9",
  "description": "Software development assistant",
  "files": [
    "dist/**/*",
    "lib/**/*",
    "assets/**/*"
  ],
  "main": ".webpack/main",
  "scripts": {
    "build": "tslint -p tsconfig.json && electron-forge package",
    "watch": "electron-forge start",
    "test": "jest --config jest.config.js",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "bin": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mpasarin/sda.git"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/logo128.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "sda-gui",
            "iconUrl": "https://github.com/mpasarin/sda/blob/master/packages/sda-gui/assets/logo128.ico?raw=true"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/app/index.html",
                  "js": "./src/app/ReactApp.tsx",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "keywords": [
    "sda",
    "environment",
    "manager"
  ],
  "author": "Marc Pasarin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mpasarin/sda/issues"
  },
  "homepage": "https://github.com/mpasarin/sda#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.47",
    "@electron-forge/maker-deb": "^6.0.0-beta.47",
    "@electron-forge/maker-rpm": "^6.0.0-beta.47",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.47",
    "@electron-forge/maker-zip": "^6.0.0-beta.47",
    "@electron-forge/plugin-webpack": "^6.0.4",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@types/lodash": "^4.14.120",
    "@types/node": "^8.10.39",
    "@types/react": "~16.9.19",
    "@types/react-dom": "~16.9.5",
    "@types/react-redux": "^7.1.9",
    "@types/redux": "^3.6.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "electron": "^7.1.10",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "html-webpack-plugin": "~5.5.0",
    "node-loader": "^0.6.0",
    "react": "~16.12.0",
    "react-dom": "~16.12.0",
    "react-redux": "^7.2.1",
    "redux": "^4.0.5",
    "style-loader": "^0.23.1",
    "ts-loader": "~6.2.1",
    "tslint": "^5.12.1",
    "tslint-react": "~4.2.0",
    "typescript": "^3.3.1",
    "webpack": "~4.41.5",
    "webpack-cli": "~3.3.10"
  },
  "dependencies": {
    "@uifabric/icons": "~7.3.2",
    "electron-squirrel-startup": "^1.0.0",
    "gift": "~0.10.2",
    "globby": "^11.0.0",
    "lodash": "^4.17.11",
    "office-ui-fabric-react": "~7.84.1",
    "path-type": "^4.0.0",
    "sda": "0.0.8",
    "yeoman-environment": "^2.6.0"
  }
}
