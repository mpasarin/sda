{
  "templates": {
    "sda": {
      "commands": {
        "build": "npm run build",
        "test": [
          "echo Running 'sda dummy'. Expect 'Test successful'", 
          "sda dummy", 
          "echo Running 'sda failtest'. Expect error because command doesn't exist", 
          "sda failtest", 
          "echo Running 'sda testPS'. Expect 'PowerShell script success'", 
          "sda testPS", 
          "echo Running 'sda testJS'. Expect 'Node script success'", 
          "sda testJS", 
          "echo Running 'sda testNode -v'. Expect NodeJS version", 
          "sda testNode -v"
        ],
        "testNode": {
          "cmd": "node %PARAM% && echo Params test successful",
          "validParams": ["-v", "--version", "-p"]
        },
        "dummy": "echo Test successful",
        "throw": "node -e \"throw new Error('Expected error')\"",
        "testCmd": {
          "cmd": "cd",
          "cwd": "C:\\"
        },
        "testPS" : {
          "filePath": "test\\dummy_script_powershell.ps1",
          "interpreter": "powershell"
        },
        "testJS" : {
          "filePath": "test\\dummy_script_node.js",
          "interpreter": "node"
        }
      }, 
      "metadata": {
        "buildDefpath": "https://onedrive.visualstudio.com/SPPPlat/_build?definitionId=3032",
        "repo": "https://onedrive.visualstudio.com/SPPPlat/_git/sp-client"
      }
    }
  },
  "environments": {
    "sda": {
      "path": ".",
      "templateId": "sda"
    },
    "sda-copy": {
      "path": ".",
      "templateId": "sda"
    }
  }
}